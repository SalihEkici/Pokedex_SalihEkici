<Window x:Class="SalihEkici_Pokedex.UI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalihEkici_Pokedex.UI"
        mc:Ignorable="d"
        Title="Login" Height="550" Width="400">
    <Grid>
        <Image Source="../Images/Pokeball.jpg" Width="200" Height="200" Margin="0,0,0,270"/>
        <Label Content="Name" Width="100" Height="35" Margin="0,0,150,0" Foreground="Black" FontSize="20"/>
        <TextBox x:Name="usernameTextBox" Height="35" Width="250" Margin="0,100,00,0"/>
        <Label Content="Password" Width="100" Height="35" Margin="0,200,150,0" Foreground="Black" FontSize="20"/>
        <PasswordBox x:Name="passwordTextBox" Height="35" Width="250" Margin="0,300,00,0"/>
        <Button Width="100" Height="30" Margin="150,400,0,0" Content="Login" Click="Button_Click"/>
        <Button Width="100" Height="30" Margin="0,400,150,0" Content="Guest" Click="Button_Click_1"/>

    </Grid>
</Window>
